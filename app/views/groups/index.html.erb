<!-- Adding Css file -->
<%= stylesheet_pack_tag 'groups/index' %>

<!-- Adding JavaScript file -->
<%= javascript_pack_tag 'groups/index' %>

<div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="list-group" style="padding-bottom:15px;">
          <div class="card">
            <div class="card-body">

              <a id="shmenulinks" class="nav-link" style="border-radius: 0.25rem; cursor: pointer; width: 100%;"
               data-toggle="collapse" aria-expanded="true" aria-controls="menulinks" data-target="#menulinks">
               <i class="fa fa-bars" aria-hidden="true"></i> Open/Close menu</a>
               
              <div id="menulinks" class="nav nav-pills collapse">

                <%= render partial: 'form' %>
                <% @groups.each do |group| %>
                    <div class="d-flex justify-content-between mb-3">
                      <%= link_to group.name, group_path(group), class: "nav-link", style: 'width: 100%;'  %>
                      <%= link_to "Delete", group_path(group), method: :delete, class: 'btn btn-danger',
                       data: { confirm: "Are you sure?" } %>
                    </div>
                <% end %>
            
              </div>
            </div>
          </div>
        </div>
      </div>
      <div id="conteudo" class="col-lg-9">
        <div class="card">
          <div class="card-body">
            <% if @group && @group.group_friends %>

              <%= render partial: 'group_friends/form' %>

              <% if @group.group_friends.count == 0 %>
                <h3>No members in the group</h3>
              <% else %>

                <ul class="list-group">
                     <% @group.group_friends.each do |group_friend| %>
                        <li class="list-group-item d-flex justify-content-between">
                            <div><h5 class="font-weight-light"><%= group_friend.friend.email %></h5></div>
                            <div class="">
                                <%= link_to "Delete", group_group_friend_path(@group, group_friend), method: :delete, class: 'btn btn-danger',
                                  data: { confirm: "Are you sure?" } %>
                            </div>
                        </li>
                    <% end %>
                </ul>
              <% end %>
            <% else %>
                <h3>Please select a group</h3>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>

