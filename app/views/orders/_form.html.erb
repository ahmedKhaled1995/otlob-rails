<%= form_with model: @order do |form| %>

<div class="container">
  <div class="row">
      <div class="col-md-6">
        <div>
        <%= form.label :order_for %><br>
        <%= form.select :order_for, ['breakfast', 'launch', 'dinner'], selected: 'breakfast' %>
        </div>
        <div >
            <%= form.label :from %><br>
            <%= form.text_field :from %>
        </div>

      
          <form class="d-flex ">
            <input class="form-control me-2 " type="search" placeholder="Search" aria-label="Search" id="fiendsearch" >
            <button class="btn btn-outline-success" id="fiendsearch_form">Add friend</button>
          </form>


          <form class="d-flex ">
          <input class="form-control me-2 " type="search" placeholder="Search" aria-label="Search" id="groupsearch" >
          <button class="btn btn-outline-success" id="groupsearch_form">Add Group</button>
        </form>
        </div>
        <div class="col-md-6">
                <h1>Friends</h1>
                <table class="table table-striped orderfriendtable">
                  <thead class="thead-dark">
                  <tr>
                  <th scope="col">ID   </th>
                  <th scope="col">Name   </th>
                  <th scope="col">Email   </th>
                  <th scope="col">Action  </th>
                  </tr>
                  </thead>
                  <tbody id="orderfriends">
                 
                      
                </tbody>
                </table>
        </div>

      <div >
          <%= form.submit class:"btn btn-success"%>
      </div>
  <div>
  
<% end %>
