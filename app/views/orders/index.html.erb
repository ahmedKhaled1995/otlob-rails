<h1>Orders</h1>
<table class="table">
  <thead class="thead-dark">
  <tr>
  <th scope="col">Order   </th>
  <th scope="col">Restaurant</th>
  <th scope="col">Invited   </th>
  <th scope="col">Joined    </th>
  <th scope="col">Status  </th>
  <th scope="col">Actions </th>
  </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
    <%  if current_user.id == order.user_id %>
          <td>
            <%= order.order_for %>
          </td>
          <td>
            <%= link_to order.restaurant.name, order %>
          </td>
          <td> 
              <% @order_friend=OrderFriend.where(order_id:order.id) %>
              <%= @order_friend.count %>
            
          </td>
          <td> 
              <% order.friends %>
          <td>
            <%= order.status %>
          </td>
          <td>
          <%= link_to "View", order %>
          <% if order.status == "waiting" %>
          <%= link_to "Finish", change_status_to_completed_order_path(order, status: :complete), method: :patch %> 
          <%= link_to "Cancel", change_status_to_canceled_order_path(order, status: :canceled), method: :patch %>
          <% end %>
          </td>
    <% else %>
        <% order.friends.each do |friend| %>
          <% if User.find_by(email: friend.email).id == current_user.id %>
          <td>
          <%= order.order_for %>
          </td>
          <td>
          <%= link_to order.restaurant.name, order %>
          </td>
          <td> <% order.friends %> </td>
          <td></td>
          <td>
          <%= order.status %>
          </td>
          <td>
          <%= link_to "View", order %>
          <% if current_user.id == order.user_id %>
          <% if order.status == "waiting" %>
          <%= link_to "Finish", change_status_to_completed_order_path(order, status: :complete), method: :patch %> 
          <%= link_to "Cancel", change_status_to_canceled_order_path(order, status: :canceled), method: :patch %>
          <% end %>
          <% end %>
          </td>
          </tr>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New Order", new_order_path, class: "btn btn-success"%>
