  <th scope="col">Status  </th>
  <th scope="col">Actions </th>
  </tr>
  </thead>
  <tbody>
  
      <% @orders.each do |order| %>
      <tr>
        <%
=begin%>
 <% order.friends.each do |friend| %>
          <% if User.find_by(email: friend.email).id == current_user.id || current_user.id == order.user_id %> 
<%
=end%>
          <td>
          <%= order.order_for %>
          </td>
          <td>
          <%= link_to order.restaurant.name, order %>
          </td>
          <td> <% order.friends %> </td>
          <td></td>
          <td>
          <%= order.status %>
          </td>
          <td>
          <%= link_to "View", order %>
          <% if order.status == "waiting" %>
          <% if current_user.id == order.user_id %>
            <%= link_to "Finish", change_status_to_completed_order_path(order, status: :complete), method: :patch %> 
            <%= link_to "Cancel", change_status_to_canceled_order_path(order, status: :canceled), method: :patch %>
          <% end %>   
          <% end %> 
          </td>
          </td>
          <%
=begin%>
 <% end %>
        <% end %> 
<%
=end%>
      </tr>
      <% end %>
  
  
  </tbody>
</table>

